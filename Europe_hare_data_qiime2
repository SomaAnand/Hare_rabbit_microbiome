#Import only the wild hare faecal data in a new directory

#Visulising the imported data
qiime demux summarize \
> --i-data 20190924_demux-paired-end.qza \
> --o-visualization 20190924_demux.qzv

#Denoising through DADA2
qiime dada2 denoise-single \
--i-demultiplexed-seqs 20190924_demux-paired-end.qza \
--p-trunc-len 298 \
--p-trim-left 17 \
--output-dir 20190924_DADA2

# Generating reference database using SILVA_132
qiime feature-classifier classify-consensus-blast \
--i-query representative_sequences.qza \
--i-reference-reads ~/20190608_Illumina_MiSeq/20190805_DADA2_pi
--i-reference-reads ~/20190608_Illumina_MiSeq/20190805_DADA2_pipeline/database/20190807_SILVA_reference_Sequence.qza \
--i-reference-taxonomy   ~/20190608_Illumina_MiSeq/20190805_DADA2_pipeline/database/20190807_SILVA_taxonomy.qza \
--o-classification 20190926_taxonomy_europe_BLAST

#View the table and stats generated by DADA2 to ensure maximum reads are retained. Generate a metadata in google sheets and validate using keemei plug-in

qiime feature-table summarize \
--i-table table.qza \
--m-sample-metadata-file hare_metadata.tsv \
--o-visualization table.qzv \

qiime feature-table tabulate-seqs \
--i-data rep-seqs.qza \
--o-visualization rep-seqs.qzv
  
qiime metadata tabulate \
--m-input-file denoising-stats.qza \
--o-visualization stats-dada2.qzv

#Visualise all the qzv files in qiime2.view

#Filter the table based on frequency at 2 and rarefy
qiime feature-table filter-features \
--i-table table.qza \
--p-min-frequency 2 \
--o-filtered-table feature-frequency-filtered-table.qza

qiime feature-table rarefy \
--p-sampling-depth 98000 \
--i-table feature-frequency-filtered-table.qza \
--o-rarefied-table freq2_filtered_rarified_table.qza

#Construct barplot
qiime taxa barplot \
--i-table freq2_filtered_rarified_table.qza \
--i-taxonomy 20190926_taxonomy_europe_BLAST \
--m-metadata-file hare_metadata.tsv \
--o-visualization taxa-bar-plots.qzv

#Visualise the plot in qiime2.view and filter only the phylum present at a frequency greater than 0.5%
qiime taxa filter-table 
--i-table freq2_filtered_rarified_table.qza \
--i-taxonomy 20190926_taxonomy_europe_BLAST\
--p-include D_1__Firmicutes,D_1__Bacteroidetes,D_1__Verrucomicrobia,D_1__Actinobacteria,D_1__Cyanobacteria,D_1__Tenericutes,D_1__Proteobacteria,D_1__Spirochetes,D_1__Lentisphaerae,D_1__Synergistetes \
--o-filtered-table freq2-phyla-filtered-table.qza

qiime taxa barplot \
--i-table freq2-phyla-filtered-table.qza\
--i-taxonomy 20190926_taxonomy_europe_BLAST \
--m-metadata-file hare_metadata.tsv \
--o-visualization taxa-bar-plots_1.qzv

#Visualise in qiime2.view


